@model MVC.Data.Book

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CoverImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img style="width:50px" src="@("/image/" + Model.CoverImageUrl)"/>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        @if (!string.IsNullOrWhiteSpace(Model.Description))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        }
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DatePublish)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DatePublish)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Codes)
        </dt>
        <dd class="col-sm-10">@Html.Raw(string.Join("<br/>", Model.Codes.Select(Html.Encode)))</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
